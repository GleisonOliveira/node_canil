{{#pets}}
	<div class="col-12 col-sm-6 col-md-4 col-lg-3">
		<div class="card">
			<img class="card-img-top" src="{{ image.src }}" alt="{{ image.title }}">
			<div class="card-body">
				<h5 class="card-title">{{ name }}</h5>
				<div><b>Cor:</b> {{ color }}</div>
				<div><b>Genero:</b> {{ sex.name }}</div>
			</div>
		</div>
	</div>
{{/pets}}
